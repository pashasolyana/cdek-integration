# ===========================================
# CDEK Integration - Production Configuration
# ===========================================

# -----------------
# ОБЩИЕ НАСТРОЙКИ
# -----------------
NODE_ENV=production
DOMAIN_NAME=your-domain.com
EMAIL=your-email@example.com

# Для тестирования SSL используйте staging сервер Let's Encrypt
# После успешного тестирования установите в false
CERTBOT_STAGING=false

# -----------------
# БАЗА ДАННЫХ
# -----------------
POSTGRES_DB=cdek_db
POSTGRES_USER=cdek_user
POSTGRES_PASSWORD=your_strong_postgres_password_here

# -----------------
# REDIS
# -----------------
REDIS_PASSWORD=your_strong_redis_password_here

# -----------------
# BACKEND API
# -----------------
PORT=3000

# JWT настройки
JWT_SECRET=your_very_long_random_jwt_secret_key_min_32_chars
JWT_EXPIRES_IN=7d

# -----------------
# CDEK API
# -----------------
CDEK_API_URL=https://api.cdek.ru/v2
CDEK_CLIENT_ID=your_cdek_client_id
CDEK_CLIENT_SECRET=your_cdek_client_secret

# -----------------
# DADATA API
# -----------------
DADATA_API_KEY=your_dadata_api_key
DADATA_SECRET_KEY=your_dadata_secret_key

# -----------------
# ДОПОЛНИТЕЛЬНО (опционально)
# -----------------
# SMS сервис (если используется)
# SMS_API_KEY=your_sms_api_key

# Adminer (для разработки, закомментируйте для production)
# ADMINER_PORT=8080
