# Настройки приложения
NODE_ENV=production
PORT=3000

# Настройки базы данных
POSTGRES_DB=cdek_db
POSTGRES_USER=cdek_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432
DATABASE_URL=postgresql://cdek_user:your_secure_password_here@postgres:5432/cdek_db?schema=public

# Настройки Redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# CDEK API Configuration
# Для тестирования используйте тестовый API: https://api.cdek.ru
# Для продакшена: https://api.cdek.ru
CDEK_API_URL=https://api.cdek.ru
CDEK_CLIENT_ID=your_cdek_client_id
CDEK_CLIENT_SECRET=your_cdek_client_secret

# JWT Configuration (для собственной авторизации в будущем, если понадобится)
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRES_IN=3600s

# Настройки портов для сервисов
ADMINER_PORT=8080

# Настройки логирования
LOG_LEVEL=info
LOG_FORMAT=json

# Настройки CORS (для фронтенда)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001